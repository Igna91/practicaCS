<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="13dip" />
            <stroke android:width="1dip" android:color="#F00" />
            <gradient android:angle="-90" android:startColor="#FA5858" android:endColor="#B40404"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="13dip" />
            <stroke android:width="1dip" android:color="#F00" />
            <solid android:color="#B40404"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="#F00" />
            <gradient android:angle="-90" android:startColor="#B40404" android:endColor="#FA5858" />
        </shape>
    </item>
</selector>